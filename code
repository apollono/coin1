    /* Essentially this is a coin flip game where the user is suppose to enter an H or a T, 
    and you press the flip coin button. It is a win if your guess is the same as the coin flip. *\
   
    int numofwins = 0;
    TextField guesstxt;
    Text winlose;
    Text wrds;
    Text wins;
    Coin myPenny = new Coin();
    
    @Override
    public void start(Stage primaryStage) {
        
        GridPane gridpane = new GridPane();
        gridpane.setAlignment(Pos.CENTER);
        gridpane.setHgap(20);
        gridpane.setVgap(20);
        
        
        Text title = new Text(200, 20, "Coin Toss");
        title.setFont(new Font("Ariel", 20));
         
        
        Circle coin = new Circle(200, 200, 100);
        coin.setFill(Color.GOLD); 
        
        wrds = new Text(160, 200, "Heads");
        wrds.setFont(new Font("Ariel", 20));
  
        
        Group group1;
        group1 = new Group(coin, wrds);
        
        Text input = new Text(200, 360, "Enter your guess of H or T");
        guesstxt = new TextField();
        
        Button btn;
        btn = new Button("Flip Coin");
        btn.setLayoutX(400);
        btn.setLayoutY(100);
        btn.setOnAction(this::Event);
        
        
        winlose = new Text(200, 400, " ");
        wins = new Text(200, 400, "Wins: " +numofwins);
        
        gridpane.add(title, 0, 0, 2, 1);
        gridpane.add(group1, 0, 2);
        gridpane.add(input, 0,3);
        gridpane.add(guesstxt, 1, 3);
        gridpane.add(btn, 0, 4);   
        gridpane.add(winlose,1,5);   
        gridpane.add(wins,0, 5);   
        
        
        Scene scene = new Scene(gridpane, 500, 500);
        primaryStage.setTitle("Coin Toss");
        primaryStage.setScene(scene);
        primaryStage.show();
    }
    
        public void Event(ActionEvent event){
          
            myPenny.getFace(); // This should return either "Heads" or "Tails"
            myPenny.toString(); 
            
            System.out.println(myPenny.toString()); 
            wrds.setText(myPenny.getFace());
            
            String getFace;
            if ("Heads".equals(myPenny.getFace())){
                getFace = "H";
            }
            else {
                getFace = "T";
            } 
            
            if ("T".equals(guesstxt.getText()) || "H".equals(guesstxt.getText())){
            
                if (guesstxt.getText().equals(getFace)) {
               
                winlose.setText("You won!");
                ++numofwins;
                wins.setText("Wins: "+numofwins);
            }
                else {
                winlose.setText("You lost!");
                
            }}
                else {
                        System.out.println("Invalid Input");
                        winlose.setText("Invalid Input");
                        }    
            }
